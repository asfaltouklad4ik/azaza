<h1> Event </h1>
<b><%= @event.name %></b>
<p><%= @category %></p>
<%= simple_nested_form_for @event do |f| %>
 
  <%= f.fields_for :tasks do |task_form| %>
    <% if task_form.object.new_record? %>
      <%= task_form.input :name %>
      <%= task_form.input :description, as: :text %>
      <%= task_form.input :deadline %>
      <%= task_form.input :priority %>
      <%= task_form.link_to_remove "Delete" %>
    <% end %>
  <% end %>
  <p><%= f.link_to_add "Make new task", :tasks %></p>
  <%= f.submit %>
<h1> Tasks </h1>
<table class='table'>
	<th>Name</th>
	<th>Description</th>
	<th>Deadline</th>
  <% @event.tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= task.deadline %></td>
      <td><%= task.user_id %></td>
      <td><%= task.priority %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'My Events', events_path %>
<% end %>